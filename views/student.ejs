<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <title>Student</title>
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">GoCademy</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="btn btn-primary" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <div class="container">
    <div class="row">
      <div class="col-md-12"><img src="https://i.postimg.cc/J4pLVJ9K/GOcademy-Premium.png"></div>
    </div><br>
    <div class="row align-items-center">
      <% coursesData.forEach(e => { let i = 1 %>
      <% if( i % 4 == 0) '<div class="row align-items-center">' %>
      <div class="col-md-4">
        <a style="color: inherit;text-decoration: none;" href="/course/<%= e.id %>/watch">
          <div class="card-column" style="width: 20rem;">
            <div style="display: flex; height: 15rem;background-color: black;">
              <img style="width: 20rem; height: auto;" src="https://img.youtube.com/vi/<%= e.videoUrl%>/0.jpg" class="card-img-top my-auto" alt="">
            </div>
            <div style="height: 180px; width: 100%;" class="card-body">
              <h5 style="height: 40%;" class="card-title"><%= e.name %></h5>
              <p style="height: 50px; overflow: hidden;"><%= e.description %></p>
            </div>
            <div class="card-footer">
              <small class="text-muted">Last updated 3 mins ago</small>
            </div>
          </div>
        </a><br>
      </div>
      <% i++ }) %>
  </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </script>
</body>

</html>